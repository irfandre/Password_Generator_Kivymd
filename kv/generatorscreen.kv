#:import Clipboard kivy.core.clipboard.Clipboard

<GeneratorScreen>:
    do_default_tab: True
    MDFloatLayout:
        radius: [25, 0, 0, 0]
#        md_bg_color: app.theme_cls.primary_color
        orientation: 'vertical'

        MDLabel:
            pos_hint: {"center_x": 0.21, "center_y": 0.7}
            size_hint: (.8, .1)
            text: str(int(input_value.value))
            halign: "center"
            font_style: "H6"
            theme_text_color: "Primary"
            id: one

        MDSlider:
            min: 0
            max: 128
            value: 8
            id: input_value
            pos_hint: {"center_x": 0.6, "center_y": 0.7}
            size_hint: .5, None
#            on_touch_move: root.generate(2,3)
#            on_active: root.generate()
            on_value: root.value_check()
#            on


        MDLabel:
            text: "Special"
            pos_hint: {"center_x": 0.7, "center_y":0.5}
            theme_text_color: "Primary"

        MDSwitch:
            id: special_switch
            pos_hint: {"center_x": 0.8, "center_y":0.5}
            on_active: root.generate(2,3)


        MDLabel:
            text: "DIgits"
            pos_hint: {"center_x": 0.7, "center_y":0.6}
            theme_text_color: "Primary"
        MDSwitch:
            id: digits_switch
            pos_hint: {"center_x": 0.8, "center_y":0.6}
            on_active: root.generate(2,3)

