#:import Clipboard kivy.core.clipboard.Clipboard

<GeneratorScreen>:
    do_default_tab: True
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'Generator'
            right_action_items: [["dots-vertical", lambda x: app.open_settings() ]]

        MDFloatLayout:
            radius: [25, 0, 0, 0]
            orientation: 'vertical'

            MDLabel:
                pos_hint: {"center_x": 0.21, "center_y": 0.7}
                size_hint: (.8, .1)
                text: str(int(input_value.value))
                halign: "center"
                font_style: "H6"
                theme_text_color: "Primary"
                id: one

            MDSlider:
                min: 0
                max: 128
                value: 8
                id: input_value
                pos_hint: {"center_x": 0.6, "center_y": 0.7}
                size_hint: .5, None
                on_value: root.value_check()



            MDLabel:
                text: "Special"
                pos_hint: {"center_x": 0.7, "center_y":0.5}
                theme_text_color: "Primary"

            MDSwitch:
                id: special_switch
                pos_hint: {"center_x": 0.8, "center_y":0.5}
                on_active: root.generate(2,3)


            MDLabel:
                text: "DIgits"
                pos_hint: {"center_x": 0.7, "center_y":0.6}
                theme_text_color: "Primary"
            MDSwitch:
                id: digits_switch
                pos_hint: {"center_x": 0.8, "center_y":0.6}
                on_active: root.generate(2,3)

            MDLabel:
                id: result
    #            pos_hint: {"x": .5, "top": .33}
                pos_hint: {"center_x":0.5, "center_y":0.85}
                size_hint: 0.65, None     # <<<<<<<<<<
                height: self.texture_size[1]   # <<<<<<<<<<
    #            scroll_y: True
    #            do_scroll_y: True
                text_size: self.width, None
                text: " "
                markup: True
                halign: "center"
    #            halign:"left"
                valign:"middle"
                allow_copy: True
                theme_text_color: "Primary"

            MDRaisedButton:
                text: "Regenerate Password"
                pos_hint: {"center_x": 0.5, "center_y":0.2}
    #            size_hint: .7,None
                on_press: root.generate(2,3)

            MDRaisedButton:
                text: "check conifg"
                pos_hint: {"center_x": 0.5, "center_y":0.15}
    #            size_hint: .7,None
                on_press: root.check_config()

            MDRaisedButton:
                text: "Copy Password"
                pos_hint: {"center_x": 0.5, "center_y":0.1}
    #            size_hint: .7,None
                on_release: root.clean_text()
            MDLabel





